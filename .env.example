# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Real-time Notifications Configuration
# Set to 'true' to completely disable real-time notifications (forces fallback mode)
# VITE_DISABLE_REALTIME=false

# Set to 'false' to disable real-time in production (default: enabled)
# VITE_ENABLE_REALTIME=true

# Real-time Connection Settings (optional)
# Heartbeat interval in milliseconds (default: 30000)
# VITE_REALTIME_HEARTBEAT_INTERVAL=30000

# Maximum reconnection attempts (default: 5)
# VITE_REALTIME_MAX_RETRIES=5

# Stripe Configuration (Frontend)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Stripe Price IDs
VITE_STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
VITE_STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual_id
VITE_STRIPE_MAX_MONTHLY_PRICE_ID=price_max_monthly_id
VITE_STRIPE_MAX_ANNUAL_PRICE_ID=price_max_annual_id

# Stripe Configuration (Backend - for Supabase Edge Functions)
# These should be set in your Supabase project settings as secrets
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
